{#de inclus select2#}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>{% block title %}Admin{% endblock %}</title>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Bootstrap core CSS -->
    {% block stylesheets %}
        {% stylesheets

        'bundles/app/css/bootstrap.min.css'
        'bundles/app/css/bootstrap-theme.css'
        'bundles/app/css/main.css'
        '@AppBundle/Resources/public/css/jquery-ui.min.css'
        '@AppBundle/Resources/public/css/select2.css'

        filter='cssrewrite' output='css/compiled/app_admin.css'
        %}

        <link rel="stylesheet" href="{{ asset_url }}" />
        <link href='https://fonts.googleapis.com/css?family=Roboto:500,400' rel='stylesheet' type='text/css'>
        {% endstylesheets %}
    {% endblock %}

</head>

<body>
{% block navigation %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    {# @review: English and translated, please #}
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                {% block navigation_links %}
                    {% include 'AppBundle::nav_admin.html.twig' %}
                {% endblock %}
            </div><!--/.nav-collapse -->
        </div>
    </nav>
{% endblock %}

<div class="container" >
    <h1>{% block heading %}Bine ai venit!{% endblock %}</h1>
    {% block messages %}
        <div id="flashmessage">
        {% for flashMessageType in app.session.flashbag.keys %}
            {% for flashMessage in app.session.flashbag.get(flashMessageType) %}
                <div class="bg-{{ flashMessageType }} ">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {%  endfor %}
        </div>
    {% endblock %}
    {% block content %}
        Content block, needs to be overridden.
    {% endblock %}
</div>

{% block javascripts %}
    {% javascripts
    '@AppBundle/Resources/public/js/jquery.min.js'
    '@AppBundle/Resources/public/js/jquery-ui.min.js'
    '@AppBundle/Resources/public/js/bootstrap.min.js'
    '@AppBundle/Resources/public/js/select2.min.js'
    output='js/compiled/app.js'
    %}
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <script src="{{ asset_url }}"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        
        var delayFlashMsgClear = setTimeout(function() {
            $('#flashmessage').slideUp(
                1000,
                function() {
                    //do something when animation complete
                    clearTimeout(delayFlashMsgClear);
                }
            );   
        }, 2000);

    });
    </script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>

